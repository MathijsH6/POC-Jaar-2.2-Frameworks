{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "backend/src/**/*",
    "frontendd/src/**/*"
  ],
  "exclude": ["node_modules", "**/*.spec.ts", "frontend/node_modules", "backend/node_modules"]
}